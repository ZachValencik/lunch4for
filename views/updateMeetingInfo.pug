doctype html
include ./header.pug
body
    include ./nav.pug
    .container
        div.col-sm.updatemeeting
            h1 Update Meeting Info
            form(action='/updateMeeting' method='POST')
                table.table
                    tr
                        td Date
                        td Input YYYY-MM-DD Format 
                            br
                            input(type='text' name='meeting_date' value=Meeting.Meet_Date pattern="^20[0-2][0-9]-((0[1-9])|(1[0-2]))-(0[1-9]|[1-2][0-9]|3[0-1])$" required='')
                    tr
                        td Time
                        td Input hh:mm Format
                            br
                            input(type='text' name='meeting_time' value=Meeting.Meet_Time pattern="^([0-9]|0[0-9]|1[0-9]|2[0-3]):[0-5][0-9]$" required='')
                    tr
                        td Location
                        td
                            input(type='textbox' name='meeting_location' value=Meeting.Meet_Location required='')
                br
                input(input type="hidden" name="team_id" value=TeamId)
                input(class="btn btn-info" type='submit')
            br
            br
            div.text-uppercase
                    a(class="btn btn-info" href="/meeting" role="button") Cancel
            br
    include ./bootstrapScript.pug      